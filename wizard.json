{
    "$schema": "https://package-wizard.com/schemas/schema-v2.json",
    "wizard": {
        "install": false
    },
    "variables": [
        {
            "type": "year",
            "replace": ["2025"]
        }
    ],
    "replaces": [
        {
            "replace": ["JetBrains%20Writerside"],
            "with": "Documentation"
        }
    ],
    "questions": [
        {
            "type": "string",
            "title": "Enter the name of the project. For example, Package Wizard",
            "replace": [
                "The Dragon Code",
                "Writerside Documentation",
                "Writerside Documentation Template",
                "Package Wizard, Andrey Helldar"
            ],
            "with": {
                "slug": true,
                "uppercase": true,
                "filename": true,
                "urlQuery": true
            }
        },
        {
            "type": "url",
            "title": "Enter a link to the Donation service",
            "replace": ["https://boosty.to/dragon-code"]
        },
        {
            "type": "url",
            "title": "Enter the URL on which your documentation will be placed",
            "replace": ["package-wizard.com"]
        },
        {
            "type": "string",
            "title": "Enter the ALGOLIA key",
            "replace": [":algolia-api-key:"]
        },
        {
            "type": "string",
            "title": "Enter the ALGOLIA project ID",
            "replace": [":algolia-id:"]
        },
        {
            "type": "string",
            "title": "Enter the ALGOLIA index name",
            "replace": [":algolia-index:"]
        },
        {
            "type": "string",
            "title": "Enter the repository organization name. For example, package-wizard",
            "replace": ["package-wizard"]
        },
        {
            "type": "string",
            "title": "Enter the repository name. For example, writerside-template",
            "replace": ["writerside-template"]
        }
    ]
}
